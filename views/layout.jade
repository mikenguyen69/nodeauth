doctype html
html(lang='en')
  head
    title Welcome
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') NodeAuth
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li(class=(title == 'Members' ? 'active' : '')).nav-item
            a.nav-link(href='/') Members
          li(class=(title == 'Register' ? 'active' : '')).nav-item
            a.nav-link(href='/users/register') Register
          li(class=(title == 'Login' ? 'active' : '')).nav-item
            a.nav-link(href='/users/login') Login
        ul.navbar-nav.navbar-right
          li
            a.nav-link(href='/users/login') Logout
              
    .container
     != messages()
     block content

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascripts/bootstrap.js')
    hr
    footer.container
